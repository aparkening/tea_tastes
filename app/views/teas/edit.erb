<h1>Edit Tea</h1>

<%= erb :'/_messages', locals: {flash: flash} %>

<form action="/teas/<%= @tea.slug %>" method="POST" class="form-group">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>
    <label for="name">Name:*</label>
    <input type="text" name="tea[name]" id="name" value="<%= @tea.name %>" class="form-control" required>
  </p>
  <p>
    <label for="tea[category]">Category:</label>
    <select name="tea[category]" class="form-control">
      <option value="Aged" <%='selected' if @tea.category == "Aged" %>>Aged</option>
      <option value="Black" <%='selected' if @tea.category == "Black" %>>Black</option>
      <option value="Green" <%='selected' if @tea.category == "Green" %>>Green</option>
      <option value="Herbal" <%='selected' if @tea.category == "Herbal" %>>Herbal</option>
      <option value="Oolong" <%='selected' if @tea.category == "Oolong" %>>Oolong</option>
      <option value="Pu-er" <%='selected' if @tea.category == "Pu-er" %>>Pu-er</option>  
      <option value="Rooibos" <%='selected' if @tea.category == "Rooibos" %>>Rooibos</option>   
      <option value="White" <%='selected' if @tea.category == "White" %>>White</option>
      <option value="Yellow" <%='selected' if @tea.category == "Yellow" %>>Yellow</option>
    </select>
  </p>
  <p>
    <label for="url">URL:</label>
    <input type="text" name="tea[url]" id="url" value="<%= @tea.url %>" class="form-control">
  </p>
  <p>
    <label for="country">Region:</label>
    <input type="text" name="tea[region]" id="region" value="<%= @tea.region %>" class="form-control">
  </p>
  <p>
    <label for="country">Country:</label>
    <input type="text" name="tea[country]" id="country" value="<%= @tea.country %>" class="form-control">
  </p> 
  <p>
    <label for="description">Description:*</label>
    <textarea rows="10" cols="50" name="tea[description]" id="description" class="form-control" required><%= Sanitize.fragment(@tea.description) %></textarea>
  </p>
  <p>
    <label for="tea[shop_id]">Select Shop:</label>
    <select name="tea[shop_id]" class="form-control">
      <% @shops.each do |shop| %>
        <option value="<%= shop.id %>" <%='selected' if @tea.shop == shop %>><%= shop.name %></option>
      <% end %>
    </select>
  </p>

  <fieldset>
    <legend>Or Create New Shop</legend>
    <p>
      <label for="shop[name]">Shop Name:*</label>
      <input type="text" name="shop[name]" id="shop[name]" class="form-control">
    </p>
    <p>
      <label for="shop[url]">Shop URL:</label>
      <input type="text" name="shop[url]" id="shop[url]" class="form-control">
    </p>
    <p>
      <label for="shop[description]">Shop Description:</label>
      <textarea rows="10" cols="50" name="shop[description]" id="shop[description]" class="form-control"></textarea>
    </p>
  </fieldset>

  <input type="submit" name="Update Tea" class="btn btn-info">
</form>