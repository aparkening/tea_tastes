<h1>Create New Note</h1>

<% if flash.has?(:message) %>
  <ul class=<%= flash[:type] %>>
    <% flash[:message].each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action='/notes' method="post">
  <p>
    <label for="note[tea_id]">Tea:</label>
    <select name="note[tea_id]">
      <% @teas.each do |tea| %>
        <option value="<%= tea.id %>"><%= tea.name %></option>
      <% end %>
    </select>
  </p>
  <p>
    <label for="title">Title:*</label>
    <input type="text" name="note[title]" id="title" required>
  </p>
  <p>
    <label for="note[rating]">Rating:</label>
    <select name="note[rating]">
      <option value="5">Perfect</option>
      <option value="4">Pretty Good</option>
      <option value="3">Okay</option>
      <option value="2">Meh</option>
      <option value="1">Nope</option>
    </select>
  </p>  
  <p>
    <label for="content">Thoughts:*</label>
    <textarea rows="10" cols="50" name="note[content]" id="content" required></textarea>
  </p>

  <input type="submit" name="Save Note">
</form>